# Ignore everything at the root level
*

# Include the backend directory and ALL its contents
!backend/
!backend/**

# Include basic project files (optional)
!README.md
!.gitignore

# =======================================
# Now apply backend-specific ignores
# =======================================

# Maven build artifacts
backend/target/
backend/pom.xml.tag
backend/pom.xml.releaseBackup
backend/pom.xml.versionsBackup
backend/pom.xml.next
backend/release.properties
backend/dependency-reduced-pom.xml
backend/buildNumber.properties
backend/.mvn/timing.properties
backend/.mvn/wrapper/maven-wrapper.jar

# IDE files
backend/.idea/
backend/*.iws
backend/*.iml
backend/*.ipr
backend/.vscode/
backend/.settings/
backend/.project
backend/.classpath
backend/.factorypath

# OS files
backend/.DS_Store
backend/.DS_Store?
backend/._*
backend/.Spotlight-V100
backend/.Trashes
backend/ehthumbs.db
backend/Thumbs.db

# Logs
backend/logs/
backend/*.log
backend/log/

# Spring Boot specific
backend/spring-boot-*.log
backend/.attach_pid*

# Environment and secrets
backend/application-local.properties
backend/application-secret.properties
backend/.env
backend/.env.local
backend/.env.*.local

# Temporary files
backend/tmp/
backend/temp/
backend/*.tmp
backend/*.temp
backend/*.swp
backend/*.swo
backend/*~

# Build artifacts (but keep source)
backend/build/
backend/out/
backend/dist/

# Compiled artifacts
backend/*.jar
backend/*.war
backend/*.nar
backend/*.ear
backend/*.zip
backend/*.tar.gz
backend/*.rar

# Runtime files
backend/hs_err_pid*
backend/replay_pid*
backend/pids
backend/*.pid
backend/*.seed

# Database files (if any local DB files)
backend/*.db
backend/*.sqlite
backend/*.sqlite3